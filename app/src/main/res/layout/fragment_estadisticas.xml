<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leo.navigationdrawer.EstadisticasFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#30b930" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvVacio"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visitante"
                    android:id="@+id/textView14"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#30b930" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvGolesLocal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goles"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#494747" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvGolesVisitante"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvFaltasLocal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faltas"
                    android:id="@+id/textView23"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#494747" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvFaltasVisitante"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvAmarillasLocal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T. Amarillas"
                    android:id="@+id/textView26"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#494747" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvAmarillasVisitante"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvRojasLocal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T. Rojas"
                    android:id="@+id/textView29"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#494747" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tvRojasVisitante"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dorsales Local:"
                android:id="@+id/textView31"
                android:textColor="#30b930"
                android:textSize="18dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLocal1"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLocal2"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLocal3"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLocal4"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLocal5"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dorsales Visitante:"
                android:id="@+id/textView32"
                android:textSize="18dp"
                android:textColor="#30b930" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btVisitante1"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btVisitante2"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btVisitante3"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btVisitante4"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btVisitante5"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:hint="N"
                    android:backgroundTint="#cdebcd" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gol"
                    android:id="@+id/r1"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Falta"
                    android:id="@+id/r2"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T. Amarilla"
                    android:id="@+id/r3"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T. Roja"
                    android:id="@+id/r4"
                    android:checked="false" />
            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton3"
                    android:src="@drawable/ic_settings_voice_white_24dp"
                    android:layout_gravity="right"
                    android:backgroundTint="#5ed52f" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Estadisticas Individuales"
                    android:id="@+id/button"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#5ed52f"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
